<h2 class="muted">Carrito</h2>

{{#if lines.length}}
  <table aria-label="Productos del carrito">
    <thead>
      <tr>
        <th>Producto</th>
        <th style="text-align:right;">Precio</th>
        <th style="text-align:center;">Cant.</th>
        <th style="text-align:right;">Subtotal</th>
      </tr>
    </thead>
    <tbody>
      {{#each lines}}
        <tr>
          <td>{{title}}</td>
          <td style="text-align:right;">{{currency unitPrice}}</td>
          <td style="text-align:center;">{{quantity}}</td>
          <td style="text-align:right;">{{currency lineTotal}}</td>
        </tr>
      {{/each}}
    </tbody>
    <tfoot>
      <tr>
        <th colspan="3" style="text-align:right;">Total</th>
        <th style="text-align:right;">{{currency cartTotal}}</th>
      </tr>
    </tfoot>
  </table>
{{else}}
  <p>Tu carrito está vacío.</p>
{{/if}}
