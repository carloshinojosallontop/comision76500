<h2 class="muted">Carrito</h2>

{{#if cart.products.length}}
<table aria-label="Productos del carrito">
  <thead>
    <tr>
      <th>Título</th><th>Precio</th><th>Cant.</th><th>Subtotal</th>
    </tr>
  </thead>
  <tbody>
    {{#each cart.products}}
      <tr>
        <td>{{this.product.title}}</td>
        <td>$ {{this.unitPrice}}</td>
        <td>{{this.quantity}}</td>
        <td>$ {{this.lineTotal}}</td>
      </tr>
    {{/each}}
  </tbody>
  <tfoot>
    <tr>
      <th colspan="3" style="text-align:right">Total</th>
      <th>$ {{../cartTotal}}</th>
    </tr>
  </tfoot>
</table>
{{else}}
  <p>Tu carrito está vacío.</p>
{{/if}}
